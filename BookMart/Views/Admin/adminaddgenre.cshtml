@{
}
@{
    ViewData["Title"] = "Add Genre - BookMart Admin";
    Layout = "adminLayout";
}

<link href="~/css/site.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <style>
        .simple-form {
            max-width: 800px;
            margin: 0 auto;
            background: #fff;
            padding: 2rem;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0,0,0,.05);
        }

        .icon-grid, .color-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(60px, 1fr));
            gap: 1rem;
            margin-top: 0.5rem;
        }

        .icon-option {
            aspect-ratio: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            border: 2px solid #dee2e6;
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.2s ease;
        }

            .icon-option:hover {
                border-color: #0d6efd;
                background-color: #f8f9fa;
            }

            .icon-option.selected {
                border-color: #0d6efd;
                background-color: #e7f1ff;
                color: #0d6efd;
            }

        .color-option {
            aspect-ratio: 1;
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.2s ease;
            border: 2px solid transparent;
        }

            .color-option:hover {
                transform: scale(1.1);
            }

            .color-option.selected {
                border-color: #000;
                transform: scale(1.1);
            }
    </style>

<div class="simple-form">
    <div class="mb-4">
        <h2><i class="fas fa-tags me-2"></i>Add New Genre</h2>
        <p class="text-muted">Create a new genre category for books</p>
    </div>

    <form asp-controller="Admin" asp-action="Add" method="post" id="addGenreForm">
        <div class="form-group mb-4">
            <label for="genreName">Genre Name</label>
            <input type="text" class="form-control" id="genreName" name="Name" required
                   placeholder="Enter genre name">
        </div>

        <div class="form-group mb-4">
            <label for="description">Description</label>
            <textarea class="form-control" id="description" name="Description" rows="4"
                      placeholder="Enter genre description"></textarea>
        </div>

        <div class="form-group mb-4">
            <label>Icon</label>
            <input type="hidden" id="selectedIcon" name="Icon" value="fa-book">
            <div class="icon-grid">
                <div class="icon-option selected" data-icon="fa-book">
                    <i class="fas fa-book"></i>
                </div>
                <div class="icon-option" data-icon="fa-graduation-cap">
                    <i class="fas fa-graduation-cap"></i>
                </div>
                <div class="icon-option" data-icon="fa-theater-masks">
                    <i class="fas fa-theater-masks"></i>
                </div>
                <div class="icon-option" data-icon="fa-microscope">
                    <i class="fas fa-microscope"></i>
                </div>
                <div class="icon-option" data-icon="fa-heart">
                    <i class="fas fa-heart"></i>
                </div>
                <div class="icon-option" data-icon="fa-ghost">
                    <i class="fas fa-ghost"></i>
                </div>
                <div class="icon-option" data-icon="fa-hat-wizard">
                    <i class="fas fa-hat-wizard"></i>
                </div>
                <div class="icon-option" data-icon="fa-robot">
                    <i class="fas fa-robot"></i>
                </div>
            </div>
        </div>

        <div class="form-group mb-4">
            <label>Color Theme</label>
            <input type="hidden" id="selectedColor" name="ColorTheme" value="#0d6efd">
            <div class="color-grid">
                <div class="color-option selected" data-color="#0d6efd" style="background-color: #0d6efd;"></div>
                <div class="color-option" data-color="#198754" style="background-color: #198754;"></div>
                <div class="color-option" data-color="#dc3545" style="background-color: #dc3545;"></div>
                <div class="color-option" data-color="#ffc107" style="background-color: #ffc107;"></div>
                <div class="color-option" data-color="#0dcaf0" style="background-color: #0dcaf0;"></div>
                <div class="color-option" data-color="#6610f2" style="background-color: #6610f2;"></div>
            </div>
        </div>

        <div class="d-flex justify-content-between align-items-center">
            <a href="@Url.Action("admingenre", "Admin")" class="btn btn-outline-secondary">
                Cancel
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>Add Genre
            </button>
        </div>
    </form>
</div>

    <script>
        // Handle icon selection
        document.querySelectorAll('.icon-option').forEach(option => {
            option.addEventListener('click', function() {
                document.querySelector('.icon-option.selected').classList.remove('selected');
                this.classList.add('selected');
                document.getElementById('selectedIcon').value = this.getAttribute('data-icon');
            });
        });

        // Handle color selection
        document.querySelectorAll('.color-option').forEach(option => {
            option.addEventListener('click', function() {
                document.querySelector('.color-option.selected').classList.remove('selected');
                this.classList.add('selected');
                document.getElementById('selectedColor').value = this.getAttribute('data-color');
            });
        });

        // Form validation
        document.getElementById('addGenreForm').addEventListener('submit', function(e) {
            e.preventDefault();

            const genreName = document.getElementById('genreName').value.trim();
            if (!genreName) {
                alert('Please enter a genre name');
                return;
            }

            this.submit();
        });
    </script>
