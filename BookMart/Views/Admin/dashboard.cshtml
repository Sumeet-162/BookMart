@model BookMart.Models.ViewModels.AdminDashboardViewModel
@using BookMart.Models.ViewModels

@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/adminLayout.cshtml";
}

<div class="container-fluid">
    @* Stats Row *@
    <div class="row g-4 mb-4">
        <div class="col-12 col-sm-6 col-xl-3">
            <div class="stat-card">
                <div class="d-flex align-items-center">
                    <div class="stat-icon bg-primary bg-opacity-10 text-primary me-3">
                        <i class="fas fa-shopping-cart"></i>
                    </div>
                    <div>
                        <div class="small text-muted mb-1">Total Orders</div>
                        <h4 class="mb-0">@Model.TotalOrders.ToString("N0")</h4>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-xl-3">
            <div class="stat-card">
                <div class="d-flex align-items-center">
                    <div class="stat-icon bg-success bg-opacity-10 text-success me-3">
                        <i class="fas fa-book"></i>
                    </div>
                    <div>
                        <div class="small text-muted mb-1">Books in Stock</div>
                        <h4 class="mb-0">@Model.TotalBooksInStock.ToString("N0")</h4>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-xl-3">
            <div class="stat-card">
                <div class="d-flex align-items-center">
                    <div class="stat-icon bg-warning bg-opacity-10 text-warning me-3">
                        <i class="fas fa-users"></i>
                    </div>
                    <div>
                        <div class="small text-muted mb-1">Active Users</div>
                        <h4 class="mb-0">@Model.ActiveUsers.ToString("N0")</h4>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-xl-3">
            <div class="stat-card">
                <div class="d-flex align-items-center">
                    <div class="stat-icon bg-info bg-opacity-10 text-info me-3">
                        <i class="fas fa-rupee-sign"></i>
                    </div>
                    <div>
                        <div class="small text-muted mb-1">Total Revenue</div>
                        <h4 class="mb-0">₹@Model.TotalRevenue.ToString("N2")</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        @* Recent Orders *@
        <div class="col-12 col-xl-8 mb-4">
            <div class="card h-100">
                <div class="card-header bg-white py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Recent Orders</h5>
                        <a href="@Url.Action("Orders", "Admin")" class="btn btn-sm btn-primary">
                            View All
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead>
                                <tr>
                                    <th>Order ID</th>
                                    <th>Customer</th>
                                    <th>Items</th>
                                    <th>Amount</th>
                                    <th>Status</th>
                                    <th>Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in Model.RecentOrders)
                                {
                                    <tr>
                                        <td>#@order.OrderID</td>
                                        <td>@($"{order.ShippingFirstName} {order.ShippingLastName}")</td>
                                        <td>@order.OrderItems?.Count items</td>
                                        <td>₹@order.TotalAmount.ToString("N2")</td>
                                        <td>
                                            @{
                                                var statusClass = order.OrderStatus?.ToLower() switch
                                                {
                                                    "pending" => "warning",
                                                    "processing" => "info",
                                                    "shipped" => "primary",
                                                    "delivered" => "success",
                                                    "cancelled" => "danger",
                                                    _ => "secondary"
                                                };
                                            }
                                            <span class="badge bg-@statusClass">@order.OrderStatus</span>
                                        </td>
                                        <td>@order.OrderDate.ToString("MMM dd, yyyy")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        @* Top Selling Books *@
        <div class="col-12 col-xl-4 mb-4">
            <div class="card h-100">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0">Top Selling Books</h5>
                </div>
                <div class="card-body">
                    @foreach (var book in Model.TopSellingBooks)
                    {
                        <div class="d-flex align-items-center mb-3">
                            <img src="@book.CoverImageURL" alt="@book.Title" class="rounded shadow-sm" style="width: 48px; height: 72px; object-fit: cover;">
                            <div class="ms-3 flex-grow-1">
                                <h6 class="mb-0">@book.Title</h6>
                                <small class="text-muted">by @book.Author</small>
                            </div>
                            <div class="text-end">
                                <div class="small text-success">@book.TotalSold sold</div>
                                <small class="text-muted">₹@book.Revenue.ToString("N0")</small>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
