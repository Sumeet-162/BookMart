@{
}
@{
    ViewData["Title"] = "Add Genre - BookMart Admin";
    Layout = "adminLayout";
}

<link href="~/css/site.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <style>
        .simple-form {
            max-width: 800px;
            margin: 0 auto;
            background: #fff;
            padding: 2rem;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0,0,0,.05);
        }

        .icon-grid, .color-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(60px, 1fr));
            gap: 1rem;
            margin-top: 0.5rem;
        }

        .icon-option {
            aspect-ratio: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            border: 2px solid #dee2e6;
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.2s ease;
        }

            .icon-option:hover {
                border-color: #0d6efd;
                background-color: #f8f9fa;
            }

            .icon-option.selected {
                border-color: #0d6efd;
                background-color: #e7f1ff;
                color: #0d6efd;
            }

        .color-option {
            aspect-ratio: 1;
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.2s ease;
            border: 2px solid transparent;
        }

            .color-option:hover {
                transform: scale(1.1);
            }

            .color-option.selected {
                border-color: #000;
                transform: scale(1.1);
            }
    </style>


<div class="simple-form">
    <div class="mb-4">
        <h2><i class="fas fa-tags me-2"></i>Update Genre</h2>
        <p class="text-muted">Modify an existing genre category</p>
    </div>

    <form asp-controller="Genre" asp-action="Edit" method="post" id="updateGenreForm">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="CreatedAt" />
        <input type="hidden" asp-for="CreatedBy" />
        <input type="hidden" asp-for="LastModifiedAt" value="@DateTime.UtcNow" />
        <input type="hidden" asp-for="LastModifiedBy" value="@User.Identity.Name" />

        <div class="form-group mb-4">
            <label asp-for="Name">Genre Name</label>
            <input asp-for="Name" class="form-control" required>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="Description">Description</label>
            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label>Icon</label>
            <input type="hidden" asp-for="Icon" id="selectedIcon">
            <div class="icon-grid">
                <div class="icon-option @(Model.Icon == "fa-book" ? "selected" : "")" data-icon="fa-book">
                    <i class="fas fa-book"></i>
                </div>
                <div class="icon-option @(Model.Icon == "fa-graduation-cap" ? "selected" : "")" data-icon="fa-graduation-cap">
                    <i class="fas fa-graduation-cap"></i>
                </div>
                <div class="icon-option @(Model.Icon == "fa-theater-masks" ? "selected" : "")" data-icon="fa-theater-masks">
                    <i class="fas fa-theater-masks"></i>
                </div>
                <div class="icon-option @(Model.Icon == "fa-microscope" ? "selected" : "")" data-icon="fa-microscope">
                    <i class="fas fa-microscope"></i>
                </div>
                <div class="icon-option @(Model.Icon == "fa-heart" ? "selected" : "")" data-icon="fa-heart">
                    <i class="fas fa-heart"></i>
                </div>
                <div class="icon-option @(Model.Icon == "fa-ghost" ? "selected" : "")" data-icon="fa-ghost">
                    <i class="fas fa-ghost"></i>
                </div>
                <div class="icon-option @(Model.Icon == "fa-hat-wizard" ? "selected" : "")" data-icon="fa-hat-wizard">
                    <i class="fas fa-hat-wizard"></i>
                </div>
                <div class="icon-option @(Model.Icon == "fa-robot" ? "selected" : "")" data-icon="fa-robot">
                    <i class="fas fa-robot"></i>
                </div>
            </div>
            <span asp-validation-for="Icon" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label>Color Theme</label>
            <input type="hidden" asp-for="ColorTheme" id="selectedColor">
            <div class="color-grid">
                <div class="color-option @(Model.ColorTheme == "#0d6efd" ? "selected" : "")"
                     data-color="#0d6efd" style="background-color: #0d6efd;"></div>
                <div class="color-option @(Model.ColorTheme == "#198754" ? "selected" : "")"
                     data-color="#198754" style="background-color: #198754;"></div>
                <div class="color-option @(Model.ColorTheme == "#dc3545" ? "selected" : "")"
                     data-color="#dc3545" style="background-color: #dc3545;"></div>
                <div class="color-option @(Model.ColorTheme == "#ffc107" ? "selected" : "")"
                     data-color="#ffc107" style="background-color: #ffc107;"></div>
                <div class="color-option @(Model.ColorTheme == "#0dcaf0" ? "selected" : "")"
                     data-color="#0dcaf0" style="background-color: #0dcaf0;"></div>
                <div class="color-option @(Model.ColorTheme == "#6610f2" ? "selected" : "")"
                     data-color="#6610f2" style="background-color: #6610f2;"></div>
            </div>
            <span asp-validation-for="ColorTheme" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between align-items-center">
            <a href="@Url.Action("admingenre", "Admim")" class="btn btn-outline-secondary">
                Cancel
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>Add Genre
            </button>
        </div>
    </form>
</div>

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script>
        // Handle icon selection
        document.querySelectorAll('.icon-option').forEach(option => {
            option.addEventListener('click', function() {
                document.querySelector('.icon-option.selected').classList.remove('selected');
                this.classList.add('selected');
                document.getElementById('selectedIcon').value = this.getAttribute('data-icon');
            });
        });

        // Handle color selection
        document.querySelectorAll('.color-option').forEach(option => {
            option.addEventListener('click', function() {
                document.querySelector('.color-option.selected').classList.remove('selected');
                this.classList.add('selected');
                document.getElementById('selectedColor').value = this.getAttribute('data-color');
            });
        });

        // Form validation
        document.getElementById('updateGenreForm').addEventListener('submit', function(e) {
            if (!this.checkValidity()) {
                e.preventDefault();
                e.stopPropagation();
            }
            this.classList.add('was-validated');
        });
    </script>
