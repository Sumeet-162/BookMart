    <!-- Popular Authors Section -->
    <section class="py-5 popular-authors">
        <div class="container">
            <h2 class="mb-4">Popular Authors</h2>
            <div class="row g-4">
                @if (Model.PopularAuthors?.Any() == true)
                {
                    @foreach (var author in Model.PopularAuthors)
                    {
