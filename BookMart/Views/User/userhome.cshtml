<section class="py-5">
    <div class="container">
        <h2 class="mb-4">Popular Authors</h2>
        <div class="row g-4">
            @* Use Model.PopularAuthors instead of ViewBag.PopularAuthors *@
            @if (Model.PopularAuthors != null)
            {
                @foreach (var author in Model.PopularAuthors)
                {
                    <div class="col-6 col-md-3">
                        <div class="card text-center h-100">
                            <div class="card-body">
                                <img src="@(author.AuthorName == "Steve Jobs" ? "/images/steve.webp" : "https://via.placeholder.com/100")" class="rounded-circle mb-3" style="width: 100px; height: 100px; object-fit: cover;" alt="@author.AuthorName">
                                <h5 class="card-title">@author.AuthorName</h5>
                                <p class="card-text text-muted">@author.Genre</p>
                            </div>
                        </div>
                    </div>
                }
            }
            @* Placeholder for additional author cards if less than 4 from DB - keep this logic if needed *@
            @if (Model.PopularAuthors?.Count < 4)
            {
                var existingAuthors = new HashSet<string>();
                if (Model.PopularAuthors != null)
                {
                    foreach (var author in Model.PopularAuthors)
                    {
                        existingAuthors.Add(author.AuthorName);
                    }
                }

                @if (!existingAuthors.Contains("George Orwell"))
                {
                    <div class="col-6 col-md-3">
                        <div class="card text-center h-100">
                            <div class="card-body">
                                <img src="https://via.placeholder.com/100" class="rounded-circle mb-3" style="width: 100px; height: 100px; object-fit: cover;" alt="George Orwell">
                                <h5 class="card-title">George Orwell</h5>
                                <p class="card-text text-muted">Fiction</p>
                            </div>
                        </div>
                    </div>
                }
                @if (!existingAuthors.Contains("Paulo Coelho"))
                {
                    <div class="col-6 col-md-3">
                        <div class="card text-center h-100">
                            <div class="card-body">
                                <img src="https://via.placeholder.com/100" class="rounded-circle mb-3" style="width: 100px; height: 100px; object-fit: cover;" alt="Paulo Coelho">
                                <h5 class="card-title">Paulo Coelho</h5>
                                <p class="card-text text-muted">Fiction</p>
                            </div>
                        </div>
                    </div>
                }
                @if (!existingAuthors.Contains("Michelle Obama"))
                {
                    <div class="col-6 col-md-3">
                        <div class="card text-center h-100">
                            <div class="card-body">
                                <img src="https://via.placeholder.com/100" class="rounded-circle mb-3" style="width: 100px; height: 100px; object-fit: cover;" alt="Michelle Obama">
                                <h5 class="card-title">Michelle Obama</h5>
                                <p class="card-text text-muted">Biography</p>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</section>

